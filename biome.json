{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"correctness": {
				"noNodejsModules": "off"
			},
			"suspicious": {
				"noReactSpecificProps": "off"
			}
		}
	},
	"overrides": [
		{
			"include": [
				"next.config.ts",
				"layout.tsx",
				"page.tsx",
				"loading.tsx",
				"error.tsx",
				"not-found.tsx",
				"middleware.ts",
				"default.tsx",
				"postcss.config.mjs",
				"/src/components/justd/ui/index.ts",
				"route.ts",
				"drizzle.config.ts"
			],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		},
		{
			"include": ["src/components/justd/ui/index.ts"],
			"linter": {
				"rules": {
					"performance": {
						"noBarrelFile": "off",
						"noReExportAll": "off"
					},
					"correctness": {
						"useImportExtensions": "off"
					}
				}
			}
		},
		{
			"include": ["src/components/justd/ui/*.tsx"],
			"linter": {
				"rules": {
					"a11y": {
						"noSvgWithoutTitle": "off"
					}
				}
			}
		},
		{
			"include": ["convex/_generated/*.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		},
		{
			"include": ["convex/*.ts", "route.ts"],
			"linter": {
				"rules": {
					"correctness": {
						"useImportExtensions": "off"
					}
				}
			}
		},
		{
			"include": ["src/env.ts"],
			"linter": {
				"rules": {
					"style": {
						"useNamingConvention": "off"
					}
				}
			}
		}
	]
}
